#include <gtest/gtest.h>
#include "Personne.h"
#include "Date.h"

TEST(PersonneConstructeur, PersonneValide)
{
	util::Date d(25, 8, 2004);
	hockey::Joueur j("Nom", "Prenom", d, "418 498-4193", "centre");
	PRECONDITION(util::validerFormatNom(j.reqNom()));
	PRECONDITION(util::validerFormatNom(j.reqPrenom()));
	PRECONDITION(util::validerTelephone(j.reqTelephone()));
	PRECONDITION(util::Date::validerDate(j.reqDateNaissance().reqJour(), j.reqDateNaissance().reqMois(), j.reqDateNaissance().reqAnnee()));
}
